<% content_for :title, "Users" %>

<div class="flex flex-col items-center min-h-screen">
  <h1 class="text-3xl font-bold mb-12 mt-8">Users</h1>

  <div class="w-full max-w-md mx-auto">
    <ul class="space-y-4">
      <% @users.each do |user| %>
        <li class="p-3 bg-gray-100 rounded text-center"><%= user.username %> - <%= user.email %></li>
      <% end %>
    </ul>
  </div>

  <%= link_to 'New User', new_user_path, class: 'mt-8 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
</div>